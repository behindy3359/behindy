# 루트 디렉터리/.env.example
# =======================
# 🌍 Behindy 환경변수 템플릿
# =======================
# 이 파일을 복사해서 .env 파일을 만들고 실제 값으로 교체하세요

# 🔧 Next.js 환경변수 (빌드 시점에 필요)
NEXT_PUBLIC_API_URL=https://behindy.me/api
NEXT_PUBLIC_AI_URL=https://behindy.me/ai
NEXT_PUBLIC_DEV_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_TOKEN_KEY=behindy_access_token
NEXT_PUBLIC_REFRESH_TOKEN_KEY=behindy_refresh_token
NEXT_PUBLIC_APP_NAME=Behindy
NEXT_PUBLIC_APP_VERSION=1.0.0

# 🗄️ 데이터베이스
DB_USER=behindy_user
DB_PASS=your_secure_password_here
DB_NAME=behindy
DB_PORT=5432

# 🔴 Redis
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379

# 🔐 JWT & 암호화
JWT_SECRET=your_jwt_secret_here
FIELD_KEY=your_field_key_here
TABLE_KEY=your_table_key_here

# 🚇 서울시 지하철 API
SEOUL_METRO_API_KEY=your_seoul_metro_api_key_here
METRO_API_ENABLED=true
METRO_ENABLED_LINES=1,2,3,4
METRO_UPDATE_INTERVAL=30000
METRO_DAILY_LIMIT=10000